{
  "name": "icp-flows",
  "version": "1.0.0",
  "description": "ICP blockchain transaction scanner for tracking token flows",
  "main": "dist/scanner.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/scanner.js",
    "dev": "ts-node src/scanner.ts",
    "verify": "ts-node src/verify.ts",
    "scan": "./scripts/run.sh",
    "flow": "./scripts/run-rosetta-flow.sh",
    "flow:all": "pnpm flow:new-vault && pnpm flow:new-custodian && pnpm flow:old-vault && pnpm flow:old-custodian",
    "flow:new-vault": "./scripts/run-rosetta-flow.sh addresses-new-vault-subaccounts.json",
    "flow:new-custodian": "./scripts/run-rosetta-flow.sh addresses-new-custodian.json",
    "flow:old-vault": "./scripts/run-rosetta-flow.sh addresses-old-vault-subaccounts.json",
    "flow:old-custodian": "./scripts/run-rosetta-flow.sh addresses-old-custodian.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint:fix && pnpm format && pnpm build"
  },
  "keywords": [
    "icp",
    "blockchain",
    "scanner",
    "crypto",
    "dfinity"
  ],
  "author": "Agustinus Theodorus",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@dfinity/agent": "^3.2.6",
    "@dfinity/candid": "^3.2.6",
    "@dfinity/ledger-icrc": "^4.0.1",
    "@dfinity/principal": "^3.2.6",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.19.2",
    "@typescript-eslint/parser": "^8.19.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
